{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Debug Web App",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "npm run dev",
			"postDebugTask": "terminate",
			"runtimeArgs": []
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Tests",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "test", "--"],
			"args": ["--runInBand", "--watchAll=false"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Electron: Main",
			"program": "${workspaceFolder}/dist-desktop/main.js",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"runtimeArgs": [
				"--enable-logging",
				"--inspect=5858",
				"--remote-debugging-port=9222"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"preLaunchTask": "npm run electron:build",
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/dist-desktop/**/*.js"],
			"skipFiles": ["<node_internals>/**"],
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			}
		},
		{
			"type": "chrome",
			"request": "attach",
			"name": "Debug Electron: Renderer",
			"port": 9222,
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "npm run dev",
			"urlFilter": "http://localhost:5173/*"
		}
	],
	"compounds": [
		{
			"name": "Debug Electron",
			"configurations": ["Debug Electron: Main", "Debug Electron: Renderer"],
			"stopAll": true
		}
	]
}
