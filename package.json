{
	"name": "react-vite-project",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"deploy": "vite build && gh-pages -d dist",
		"dep:clean": "rimraf dependency-graph",
		"dep:graph": "npm run dep:clean && mkdir dependency-graph && madge --extensions ts,tsx,js,jsx --image dependency-graph/dependency-graph.svg src",
		"dep:list": "madge --extensions ts,tsx,js,jsx src > dependency-graph/dependency-list.txt",
		"dep:circle": "madge --extensions ts,tsx,js,jsx --circular src > dependency-graph/circular-dependencies.txt",
		"dep:circle2": "depcruise src --config dependency-cruiser.js > dependency-graph/circular-dependencies.txt",
		"dep": "npm run dep:graph && npm run dep:list && npm run dep:circle",
		"dep:check": "madge --extensions ts,tsx,js,jsx --circular src",
		"test": "jest"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.50.3",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.0",
		"classnames": "^2.5.1",
		"dompurify": "^3.2.5",
		"highlight.js": "^11.11.1",
		"katex": "^0.16.22",
		"markdown-it": "^14.1.0",
		"markdown-it-link-attributes": "^4.0.1",
		"openai": "^4.91.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@eslint/js": "^9.19.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.2.0",
		"@types/highlight.js": "^9.12.4",
		"@types/jest": "^29.5.14",
		"@types/katex": "^0.16.7",
		"@types/markdown-it": "^14.1.2",
		"@types/markdown-it-link-attributes": "^3.0.5",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"dependency-cruiser": "^16.10.2",
		"eslint": "^9.19.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.18",
		"gh-pages": "^6.3.0",
		"globals": "^15.14.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"madge": "^8.0.0",
		"rimraf": "^6.0.1",
		"rollup-plugin-license": "^3.6.0",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.22.0",
		"vite": "^6.1.0"
	}
}
